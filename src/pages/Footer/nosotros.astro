  .container-cards {
    margin: auto;
    padding-top: 100px;
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
  }

  .card {
    cursor: default;
    margin: 10px;
    overflow: hidden;
    box-shadow: 0px 1px 10px rgb(0, 0, 0, 0.2);
    transition: all 0.3s ease;
    width: 300px;
  }

  .card:hover {
    box-shadow: 5px 5px 20px rgb(0, 0, 0, 0.4);
    transform: translateY(-3%);
  }

  .card img {
    width: 100%;
    height: 350px;
    object-fit: cover;
  }

  .contenido {
    text-align: center;
    padding: 10px;
  }

  .contenido p a {
    color: aliceblue;
    text-decoration: none;
    background-color: rgb(0, 76, 255);
    padding: 10px;
    border-radius: 8px;
    box-shadow: 0px 1px 10px rgb(0, 0, 0, 0.2);
    bottom: 0;
    transition: all 0.2s;
  }

  .contenido p a:hover {
    background-color: rgb(0, 140, 255);
  }
