---
import FooterTitulo from "../../components/Footer-titulo.astro";
import Layout from "../../layouts/Layout.astro";
import Email from "../../components/icons/Email.astro"
---

<Layout title="Contacto">
<FooterTitulo img="contactanos">
  Contactános
</FooterTitulo>
    <div class="form-container">
      <div class="info-contact">
        <h3 class="cont-text">Hacenos saber lo que <br /> nos querés decir</h3>
      </div>
      <div class="info-contact">
        <form
          action="https://formsubmit.co/uni.finder01@gmail.com"
          method="POST"
          class="formulario"
        >
          <h2>Contactános</h2>
          <input
            type="text"
            placeholder="Nombre"
            name="nombre"
            class="txt-inp"
            required
          />
          <input
            type="text"
            placeholder="Apellido"
            name="apellido"
            class="txt-inp"
            required
          />
          <input
            type="email"
            name="email"
            class="txt-inp"
            placeholder="Correo electrónico"
            id=""
          />
          <textarea
            name="coment"
            placeholder="Escribí tu mensaje acá"
            class="txt-inp"
            id="txt-area"
            cols="50"
            rows="10"
            maxlength="320"></textarea>
          <input type="hidden" name="_captcha" value="false" />
          <input
            type="hidden"
            name="_next"
            value="https://unifinder-pruebas.tomas-crespocre.repl.co/Footer/form-comp-cont.html"
          />
          <input type="submit" value="Enviar" class="txt-inp" id="btn-inp" />
        </form>
      </div>
    </div>
    <div class="contact-email">
      <a href="mailto:uni.finder01@gmail.com">
        <div class="email">
          <h3>Envianos un correo</h3>
          <svg
          xmlns="http://www.w3.org/2000/svg"
          width="128"
          height="128"
          viewBox="0 0 24 24"
          ><path
            fill="#000000"
            d="M22 6c0-1.1-.9-2-2-2H4c-1.1 0-2 .9-2 2v12c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6m-2 0l-8 5l-8-5h16m0 12H4V8l8 5l8-5v10Z"
            id="email-logo"></path>
        </svg>
          <h5>uni.finder01@gmail.com</h5>
        </div>
      </a>
    </div>
</Layout>

<style>

  svg {
    width: 20px;
    height: 20px;
  }

  .contenido {
    text-align: center;
    padding: 10px;
  }

  .contenido p a {
    color: aliceblue;
    text-decoration: none;
    background-color: rgb(0, 76, 255);
    padding: 10px;
    border-radius: 8px;
    box-shadow: 0px 1px 10px rgb(0, 0, 0, 0.2);

    transition: all 0.2s;
  }

  .contenido p a:hover {
    background-color: rgb(0, 140, 255);
  }

  .form-container {
    background: #b2fefa; /* fallback for old browsers */
    background: -webkit-linear-gradient(
      to right,
      #0ed2f7,
      #b2fefa
    ); /* Chrome 10-25, Safari 5.1-6 */
    background: linear-gradient(
      to right,
      #0ed2f7,
      #b2fefa
    ); /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */

    width: 100%;
    display: flex;
    flex-wrap: wrap;
    height: auto;
    margin-top: 20px;
    padding-bottom: 50px;
  }

  .info-contact {
    margin: 0 auto;
  }

  .cont-text {
    color: rgb(0, 0, 0);
    margin-top: 30px;
    font-size: 2.5rem;
    margin-left: 5px;
  }

  #cont-text-det {
    padding-top: 50px;
    margin-left: 5px;
  }

  form h2 {
    text-align: center;
    text-decoration: underline;
    padding-bottom: 10px;
  }

  form {
    background: transparent;

    box-shadow: var(--shadow-elevation-medium);
    margin-top: 30px;
    padding: 20px 20px;
    border-radius: 10px;
    height: auto;
    border: 1px solid black;
    width: 500px;
    margin-left: 10px;
  }

  label {
    font-size: 1.5rem;
  }

  form input,
  textarea {
    display: block;
    resize: none !important;
  }

  .txt-inp {
    font-size: 1.2rem;
    margin-bottom: 10px !important;
    width: 300px;
    height: 50px;
    background-color: rgba(0, 0, 0, 0.507);
    border: none;
    border-radius: 5px;
    color: #fff;
    padding: 4px;

    transition: all ease 0.2s;
  }

  #txt-area {
    width: 300px !important;
    height: 200px;
  }

  select {
    font-size: 1.2rem;
  }

  .txt-inp::placeholder {
    color: #fff;
    font-size: 1.2rem;
  }

  #btn-inp {
    width: 200px;
    height: 40px;
    transition: all ease 0.3s;
  }

  #btn-inp:hover {
    background-color: rgba(0, 0, 0, 0.63);
    transform: scale(1.04);
  }

  .contact-email {
    text-align: center;
    margin: auto;
    width: 300px;
    height: 150px;
    margin-top: 30px;
  }

  .contact-email a {
    color: rgb(0, 0, 0);
    text-decoration: none;
  }

  .email {
    box-shadow: 1px 5px 10px rgba(0, 0, 0, 0.429);
    background-color: #ffffff;
    border: 1px solid rgb(0, 0, 0);
    border-radius: 10px;
    transition: all ease 0.2s;
  }

  .contact-email svg {
    width: 50px;
    height: auto;
  }

  .email:hover {
    transform: translateY(-5%);
  }

  /* Responsive */

  @media screen and (max-width:930px) {
    .form-container {
        height: auto;
        padding-bottom: 20px;
    }

    label {
        font-size: 1rem;
    }
}

@media screen and (max-width:520px) {

    form {
        width: 300px !important;

    }

    .txt-inp {
        width: 100% !important;
    }

    #txt-area {
        width: 210px !important;
        height: 150px;
        margin: auto;
    }

    #cont-text {
        margin-top: 30px;
        font-size: 1.5rem;
    }

    #btn-inp {
        width: 100px !important;
        margin: auto;
    }

}

@media screen and (max-width:350px) {
    #titulo {
        font-size: 3rem;
    }
}
</style>
