<style>
  .facus {
    text-align: center;
  }

  .facus h1{
    margin: 50px;
  }

  .facus-container {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(420px, 1fr));
    padding: 15px;
    gap: 15px;
  }

  .facus-container section {
    height: auto;
    text-align: start;
    border-radius: 10px;
    background-color: rgb(233, 233, 233);
    box-shadow: 3px 5px 10px rgba(0, 0, 0, 0.395);
  }

  .facus-container section h2 {
    height: 107px;
    text-align: center;
    padding: 15px;
    margin-bottom: 20px;
    color: white;
    background: linear-gradient(to top, #60a8f0, rgb(1 95 255));
    border-radius: 10px 10px 0 0;
  }

  section ul {
    margin-left: 30px;
    font-size: 1.4rem;
  }

  /* section:first-child {
    grid-row-start: 1;
    grid-row-end: 3;
  } */

  @media (width < 460px) {
    .facus-container {
      grid-template-columns: 1fr;
    }
    .facus-container section h2 {
      padding: 20px;
      height: auto;
      font-size: 1.3rem;
    }
    section ul {
      font-size: 1rem;
    }
  }
</style>
