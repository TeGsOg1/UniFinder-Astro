---
import Burger from "../components/icons/Burger.astro"
---

<header class="uf-header">
  <div class="uf-logo">
    <a href="/"><img id="uf-img" src="/LogoUF.png" alt="Logo UF" /></a>
    <span id="uf-name"><a href="/">UniFinder</a></span>
  </div>
  <input type="checkbox" id="check"/>
  <label for="check">
    <Burger />
  </label>
  <nav>
    <ul id="hola">
      <li class="inicio"><a id="inicio" href="/">Inicio</a></li>
      <li class="test-voc"><a href="/#test-voc">Test vocacional</a></li>
      <li class="Contacto"><a href="#footer">Contacto</a></li>
    </ul>
  </nav>
</header>

<style>
  header {
    display: flex;
    flex-direction: row;
    align-items: center;
    text-align: center;
    justify-content: space-between;

    position: fixed;
    top: 0;
    width: 100%;
    height: 70px;
    padding: 0 30px;
    z-index: 100;

    background-color: var(--color-principal-);
  }

  nav {
    display: flex;
    gap: 10px;
    position: relative;
  }

  nav ul {
    display: flex;
    flex-direction: row;
    text-align: center;
    list-style: none;
    gap: 30px;

    justify-content: space-between;
  }

  nav ul li {
    justify-content: space-between;
  }

  a {
    text-decoration: none;
    color: #fff;
    font-size: 1.3rem;
  }

  .uf-logo {
    display: flex;
    z-index: 20;
  }

  #uf-img {
    height: 60px;
  }

  #uf-name {
    margin-top: 20px;
  }

  svg {
    display: none;
  }

  label {
    display: flex;
    margin-top: 5px;
    right: 0;
    z-index: 9;
    display: none;
  }

  #check {
    display: none;
  }

  @media (width < 720px) {

    svg {
    display: flex;
    }

    label {
      display: block;
    }
    
    nav, nav ul{
      position: fixed;
      height: 100vh;
      width: 100%;
      background: rgba(54, 53, 53, 0.759);
      flex-direction: column;
      align-items: center;
      top: -100vh;
      left: 0%;
      transition: 0.5s;
      text-align: center;
    }

    nav ul {
      justify-content: center;
      gap: 50px;
    }

    nav ul li {
      text-align: center;
      padding-bottom: 20px;
      font-size: 20px;
      
    }

    nav ul li:last-child {
      margin-bottom: 500px;
    }

    nav ul li a {
      font-size: 20px;
      transition: all .5s;
    }

    nav ul li:first-child {
      margin-top: 30px;
    }

    nav ul li a:active {
      text-shadow:
    0 0 5px #fff,
    0 0 10px #fff,
    0 0 20px #fff,
    0 0 40px #0ff,
    0 0 80px #0ff,
    0 0 90px #0ff,
    0 0 100px #0ff,
    0 0 150px #0ff;;
    }

    #check:checked ~ nav > ul{
      top: 100%;
    }
  }

</style>
