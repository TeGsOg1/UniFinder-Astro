---
interface Props {
  uni: string;
  href: string;
}

const { uni, href } = Astro.props;
---

<div>
  <img src=`/Logo-${uni}.png` alt=`Logo ${uni}`/>
  <h3>
    Visitá la página oficial para obtener la información completa y actualizada
    de la {uni}
  </h3>
  <h3 id="h3a"><a href={href} target="_blank">Aquí</a></h3>
</div>

<style>
  div {
    width: 100%;
    min-height: 150px;
    height: auto;
    
    display: flex;
    flex-wrap: wrap;
    margin-top: 10px;
    

    color: rgb(0, 0, 0);
    align-items: center;
    justify-content: center;
  }

  h3 {
    font-size: 28px;
  }

  img {
    width: auto;
    height: 130px;

    margin: 0 30px;
  }

  a {
    margin: 0 20px;
    padding: 10px 20px;
    background-color: rgb(0, 81, 255);
    border-radius: 10px;
    right: 0;
    color: aliceblue;
  }

  /* Media Querys */

  @media (width <= 1340px) {
    div {
      padding: 10px;
    }
  }
  
  @media (width < 1205px) {
    div {
      flex-direction: column;
      align-items: center;
      text-align: center;
    }

    h3 {
      margin-top: 20px;
    }

    #h3a {
      margin-bottom: 20px;
    }
  }

  @media (width < 560px) {

    h3 {
        font-size: 1.5rem;
    }

    a {
        padding: 10px 20px;
        font-size: 1.3rem;
    }
  }

  @media (width < 380px) {
    h3 {
        font-size: 1.2rem;
    }
  }
</style>
