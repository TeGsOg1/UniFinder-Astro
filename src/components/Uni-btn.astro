---
interface Props {
    uni: string;
    btn3: string;
    btn4: string;
}

const { uni, btn3, btn4 } = Astro.props
---

<section class="categ-container">
    <a href={`/Universidades/Becas/becas-${uni}`} class="btn-categ-a">
      Becas
    </a>
    <a href={`/Universidades/Deportes/deportes-${uni}`} class="btn-categ-a">
      Deportes
    </a>
    <a href={`/Universidades/Tuto-tall/tuto-tall-${uni}`} class="btn-categ-a">
      {btn3}
    </a>
    <a href={`/Universidades/RI-Vol/ri-vol-${uni}`} class="btn-categ-a">
      {btn4}
    </a>
</section>

<style>
    .categ-container {
        margin-top: 30px;
        display: flex;
        flex-wrap: wrap;
        width: 100%;
        justify-content: space-around;
        margin-bottom: 70px;
        text-align: center;
        padding: 20px;
        gap: 20px;
    }
    
    .btn-categ-a {
        color: aliceblue;
        padding: 12px 100px;
        background-color: #1a99fb;
        font-size: 28px;
        border-radius: 5px;
        transition: all .5s;
    }



    .btn-categ-a:hover {
        background-color: rgb(34, 96, 254);
        transform: scale(1.05);
    }

    /* Media Querys */

    @media (width < 1292px) {

        .btn-categ-a {
            width: 500px;
        }
    }

    @media (width < 1060px) {
        .btn-categ-a {
            width: 400px;
        }
    }
    
    @media (width < 550px) {
        .btn-categ-a {
            font-size: 26px;
            padding: 9px;
        }

        .btn-categ {
            width: 270px;
            padding-top: 5px;
        }
        .btn-categ:hover {
            background-color: rgb(34, 151, 254);
            transform: scale(1);
        }
        .btn-categ:active {
            background-color: rgb(34, 188, 254);
            transform: scale(1.05);
        }
    }
</style>