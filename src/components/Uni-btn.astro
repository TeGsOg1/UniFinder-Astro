---
interface Props {
    uni: string;
    btn3: string;
    btn4: string;
}

const { uni, btn3, btn4 } = Astro.props
---

<section class="categ-container">
    <a href={`/Universidades/Becas/becas-${uni}`} class="btn-categ-a">
      Becas
    </a>
    <a href={`/Universidades/Deportes/deportes-${uni}`} class="btn-categ-a">
      Deportes
    </a>
    <a href={`/Universidades/Tuto-tall/tuto-tall-${uni}`} class="btn-categ-a">
      {btn3}
    </a>
    <a href={`/Universidades/RI-Vol/ri-vol-${uni}`} class="btn-categ-a">
      {btn4}
    </a>
</section>

<style>
    .categ-container {
        margin-top: 30px;
        display: flex;
        flex-wrap: wrap;
        width: 100%;
        justify-content: space-around;
        margin-bottom: 70px;
    }
    
    .btn-categ-a {
        text-decoration: none;
        font-size: 1.7rem;
        color: #fff;
        text-align: center;

        background-color: rgb(34, 151, 254);

        width: 300px;
        height: 50px;

        margin: 10px 0 2px 2px ;
        margin-top: 10px;
        border-radius: 5px;
        transition: all ease .3s;
    }

    .btn-categ-a:hover {
        background-color: rgb(34, 96, 254);
        transform: scale(1.05);
    }

    /* Media Querys */

/*     @media (width < 1208px) {
        .btn-categ-a {
            flex-basis: 50%;
        }
    }
 */
    @media screen and (max-width:550px) {
        .btn-categ-a {
            font-size: 1.5rem;
            padding: 3px;
        }

        .btn-categ {
            width: 270px;
            padding-top: 5px;
        }
        .btn-categ:hover {
            background-color: rgb(34, 151, 254);
            transform: scale(1);
        }
        .btn-categ:active {
            background-color: rgb(34, 188, 254);
            transform: scale(1.05);
        }
    }
</style>