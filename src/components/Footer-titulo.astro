---
interface Props {
  img: string;
}

const { img } = Astro.props;
---

<div class="container-pres">
  <div class="titulo" id="texto">
    <h2 id="titulo">
        <slot />
    </h2>
  </div>
  <div class="titulo">
    <img src=`/${img}.png` alt="" />
  </div>
</div>

<style>
  .container-pres {
    display: flex;
    flex-wrap: wrap;
    width: 100%;
    height: 600px;
    height: auto;
  }

  .titulo {
    margin: 0 auto;
    margin-top: 80px;
  }

  #texto {
    margin-top: 150px;
  }

  #titulo {
    font-family:
      system-ui,
      -apple-system,
      BlinkMacSystemFont,
      "Segoe UI",
      Roboto,
      Oxygen,
      Ubuntu,
      Cantarell,
      "Open Sans",
      "Helvetica Neue",
      sans-serif;
    background: #ccc;
    background: linear-gradient(
      to right,
      rgb(5, 218, 255),
      rgb(0, 179, 255),
      rgb(0, 140, 255)
    );
    font-size: 4rem;
    -webkit-text-fill-color: transparent;
    -webkit-background-clip: text;
    height: 100%;

    animation: title-appear 1s ease normal;
  }

  .titulo img {
    margin-top: 30px;
    width: auto;
    height: 350px;
  }

  @media (width < 1120px) {
    .container-pres{
    flex-direction: column;
    }

    .titulo img {
      max-width: 100%;
      height: auto;
    }
  }

  @media (width < 500px) {
    .container-pres {
      text-align: center;
    }

    #titulo {
      font-size: 56px;
    }
  }
</style>
