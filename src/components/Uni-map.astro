---
interface Props {
  map: string;
}

const { map } = Astro.props

---

<div class="facus-container">
  <div class="facus-flex" id="facus-flex-izq">
    <h1><strong>Facultades</strong></h1>
    <h3 id="inv-facu">
      Te invitamos a ver cada una de las <br />
       cuales conforman a esta universidad junto con sus respectivas <br />
       carreras y un mapa que se√±ala cada facultad.
    </h3>
  </div>
  <div class="facus-flex" id="facus-flex-der">
    <h2>Mapa de facultades</h2>
    <iframe
      title="Mapa de las facultades de la Universidad"
      id="map"
      src={ map }
    ></iframe>
  </div>
</div>

<style>

.facus-container {
    background: linear-gradient( to right, rgb(0, 200, 255), rgb(0, 140, 255), rgb(0, 89, 255));
    display: flex;
    flex-wrap: wrap;

    margin-top: 10px;
    padding: 20px;
    text-align: center;
    align-items: center;

    width: 100%;
    height: 600px;
}

.facus-flex {
    width: 50%;
}

#map {
    width: 100%;
    height: 450px;
}

.facus-container h1 {
  margin-top: 30px
}

#facus-flex-der {
    flex-grow: calc(1); 
    width: 40%;
    
}

#facus-flex-izq {
    padding: 0 20px;
    height: 100%;
}

#inv-facu {
  margin-top: 110px;
  font-size: 2.3rem;
 width: 100%;
}



/* Media Querys */

@media (width < 941px) {
  .facus-container {
    flex-direction: column;
    height: auto;
  }

  #facus-flex-der {
    width: 100%;
    margin-top: 30px;
  }

  #facus-flex-izq {
    padding: 0;
    width: 100%;
}

  #inv-facu {
  margin-top: 0;
  font-size: 1.8rem;
}

.facus-container h1 {
  top: 0;
  margin-bottom: 30px;
}

}

@media (width < 380px) {
    #inv-facu {
        font-size: 1.4rem;
    }
  }
</style>